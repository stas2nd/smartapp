mixin benefit(imgSrc, title, desc)
    .benefit.benefits__item.col-md-auto.col-lg-auto.col-xl-auto.row
        img.benefit__image.col-md-auto.col-lg-auto.col-xl-auto(src="../static/img/general/" + imgSrc)
        h1.benefit__title.col-md.col-lg.col-xl= title
        p.benefit__desc.col-md-12.col-lg-12.col-xl-12= desc
